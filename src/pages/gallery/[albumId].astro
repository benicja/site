---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { SESSION_COOKIE, getUserFromSession, isEmailApproved, isUserAdmin } from '../../lib/auth';
import { getAlbumById, getPhotosByAlbumId } from '../../lib/gallery';
import 'glightbox/dist/css/glightbox.css';

const { albumId } = Astro.params;

// Check authentication
const sessionId = Astro.cookies.get(SESSION_COOKIE)?.value;
const user = sessionId ? await getUserFromSession(sessionId) : null;
const isApproved = user ? await isEmailApproved(user.user_email) : false;
const isAdmin = sessionId ? await isUserAdmin(sessionId) : false;

if (!user || (!isApproved && !isAdmin)) {
  return Astro.redirect('/gallery');
}

if (!albumId) {
  return Astro.redirect('/gallery');
}

const album = await getAlbumById(albumId);
const photos = await getPhotosByAlbumId(albumId);

if (!album) {
  return Astro.redirect('/gallery');
}

// Helper to format date
function getDisplayDate(albumTitle: string, createdAt: string) {
  const dateMatch = albumTitle.match(/^(\d{2})\/(\d{2})/);
  if (dateMatch) {
    const year = 2000 + parseInt(dateMatch[1]);
    const month = parseInt(dateMatch[2]) - 1;
    return new Date(year, month).toLocaleDateString('en-GB', { month: 'long', year: 'numeric' });
  }
  return new Date(createdAt).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' });
}

// Helper to clean title
function getDisplayTitle(title: string) {
  return title.replace(/^\d{2}\/\d{2}\s*-\s*/, '').trim();
}
---

<Layout title={`${getDisplayTitle(album.title)} - Gallery`} description={`View photos from ${getDisplayTitle(album.title)}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Breadcrumbs -->
    <nav class="flex mb-8 text-sm font-medium text-gray-500" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <a href="/gallery" class="hover:text-primary-600 transition-colors">Gallery</a>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-1 md:ml-2 text-gray-900">{getDisplayTitle(album.title)}</span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">{getDisplayTitle(album.title)}</h1>
      <p class="text-sm text-gray-600">
        {photos.length} photos â€¢ {getDisplayDate(album.title, album.created_at)}
      </p>
    </div>

    <!-- Loading Spinner -->
    <div id="loading-spinner" class="flex justify-center items-center py-20">
      <div class="relative w-12 h-12">
        <div class="absolute inset-0 rounded-full border-2 border-gray-200"></div>
        <div class="absolute inset-0 rounded-full border-2 border-transparent border-t-gray-900 animate-spin"></div>
      </div>
    </div>

    <!-- Photo Grid -->
    <div 
      id="photo-grid" 
      class="relative w-full overflow-hidden"
    >
      {photos.map((photo) => {
        const encodedUrl = encodeURIComponent(photo.image_url);
        return (
          <a 
            href={`/api/gallery/image?url=${encodedUrl}&w=1000`} 
            class="photo-item glightbox absolute transition-all duration-300 hover:scale-[1.02] hover:z-10"
            data-gallery="gallery1"
          >
            <img 
              src={`/api/gallery/image?url=${encodedUrl}&w=800`} 
              alt="Family moment"
              class="w-full h-full object-cover rounded-xl shadow-sm hover:shadow-md transition-shadow"
              loading="lazy"
            />
          </a>
        );
      })}
    </div>
  </div>
</Layout>

<script>
  import justifiedLayout from 'justified-layout';
  import GLightbox from 'glightbox';

  async function initGallery() {
    const container = document.getElementById('photo-grid');
    if (!container) return;

    const items = Array.from(container.querySelectorAll('.photo-item')) as HTMLElement[];
    if (items.length === 0) return;

    // Load images to get natural dimensions
    const imgData = await Promise.all(items.map(item => {
      const img = item.querySelector('img');
      return new Promise<{width: number, height: number}>(resolve => {
        if (!img) return resolve({width: 300, height: 200});
        if (img.complete) {
          resolve({width: img.naturalWidth || 300, height: img.naturalHeight || 200});
        } else {
          img.onload = () => resolve({width: img.naturalWidth || 300, height: img.naturalHeight || 200});
          img.onerror = () => resolve({width: 300, height: 200});
        }
      });
    }));

    // Calculate layout
    const layout = justifiedLayout(imgData, {
      containerWidth: container.clientWidth,
      targetRowHeight: 280,
      boxSpacing: 12,
      containerPadding: 0
    });

    // Apply layout
    container.style.height = `${layout.containerHeight}px`;
    items.forEach((item, i) => {
      const box = layout.boxes[i];
      if (!box) return;
      item.style.position = 'absolute';
      item.style.top = `${box.top}px`;
      item.style.left = `${box.left}px`;
      item.style.width = `${box.width}px`;
      item.style.height = `${box.height}px`;
      item.style.display = 'block';
    });

    // Hide spinner after layout is applied
    const spinner = document.getElementById('loading-spinner');
    if (spinner) {
      spinner.style.display = 'none';
    }

    // Init Lightbox
    const lightbox = GLightbox({
      selector: '.glightbox',
      loop: true,
      openEffect: 'zoom',
      closeEffect: 'fade',
      width: '90vw',
      height: '90vh',
    });
  }

  // Handle page load and Astro view transitions
  initGallery();
  document.addEventListener('astro:after-swap', initGallery);
  
  // Re-layout on window resize
  let resizeTimeout: any;
  window.addEventListener('resize', () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(initGallery, 250);
  });
</script>

