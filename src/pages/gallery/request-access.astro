---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { SESSION_COOKIE, getUserFromSession } from '../../lib/auth';

// Get user session to force their official email
const sessionId = Astro.cookies.get(SESSION_COOKIE)?.value;
const user = sessionId ? await getUserFromSession(sessionId) : null;

// Only allow access to this page if we have a session (signed in via Google)
if (!user) {
  return Astro.redirect(`/auth/login?next=${Astro.url.pathname}`);
}

const email = user.user_email;
---

<Layout title="Request Access" description="Request access to the family photo gallery">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="text-center mb-16">
      <h1 class="text-5xl font-serif font-bold text-gray-900 mb-6">Access Request</h1>
      <p class="text-xl text-gray-500 font-light leading-relaxed">
        Our gallery is a private space for family memories. Please provide your details to request access.
      </p>
    </div>

    <div class="bg-white border border-gray-100 rounded-sm shadow-2xl p-10 md:p-16">
      <form id="accessRequestForm" class="space-y-10">
        <div class="space-y-4">
          <label for="email" class="text-xs font-bold uppercase tracking-widest text-gray-400">
            Verified Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            readonly
            value={email}
            class="w-full px-0 py-4 bg-transparent border-b border-gray-100 text-gray-900 focus:outline-none font-serif text-2xl opacity-50 cursor-not-allowed"
          />
        </div>

        <div class="space-y-4">
          <label for="fullName" class="text-xs font-bold uppercase tracking-widest text-gray-400">
            Full Name
          </label>
          <input
            type="text"
            id="fullName"
            name="fullName"
            required
            class="w-full px-0 py-4 bg-transparent border-b border-gray-100 text-gray-900 focus:outline-none focus:border-gray-900 transition-colors font-serif text-2xl placeholder:text-gray-100"
            placeholder="Your Name"
          />
        </div>

        <div class="space-y-4">
          <label for="message" class="text-xs font-bold uppercase tracking-widest text-gray-400">
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="3"
            class="w-full px-0 py-4 bg-transparent border-b border-gray-100 text-gray-900 focus:outline-none focus:border-gray-900 transition-colors font-light text-lg placeholder:text-gray-100 resize-none"
            placeholder="Tell us who you are..."
          ></textarea>
        </div>

        <div class="flex items-start gap-4">
          <input
            id="privacy"
            name="privacy"
            type="checkbox"
            required
            class="mt-1.5 w-5 h-5 border-gray-200 rounded text-gray-900 focus:ring-gray-900"
          />
          <label for="privacy" class="text-sm text-gray-500 font-light leading-relaxed">
            I understand that access is restricted to family members and authorized individuals only.
          </label>
        </div>

        <button
          type="submit"
          class="w-full py-6 px-10 bg-gray-900 text-white text-sm font-bold uppercase tracking-widest hover:bg-gray-800 transition-all rounded-full shadow-xl hover:shadow-2xl hover:-translate-y-1"
        >
          Submit Request
        </button>
      </form>

      <div id="successMessage" class="hidden mt-12 text-center p-8 bg-gray-50 rounded-sm">
        <h3 class="text-2xl font-serif text-gray-900 mb-4">Request Sent</h3>
        <p class="text-gray-500 font-light leading-relaxed">
          We've received your application. You'll hear from us via email once it's been reviewed.
        </p>
      </div>
      
      <div id="errorMessage" class="hidden mt-12 p-8 bg-red-50 rounded-sm">
        <h3 class="text-xl font-serif text-red-900 mb-2">Error</h3>
        <p class="text-red-800/80 text-sm" id="errorText"></p>
      </div>
    </div>

    <div class="text-center mt-12">
      <a href="/gallery" class="text-xs font-bold uppercase tracking-widest text-gray-400 hover:text-gray-900 transition-colors">
        ‚Üê Back to Gallery
      </a>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('accessRequestForm') as HTMLFormElement;
  const successMessage = document.getElementById('successMessage');
  const errorMessage = document.getElementById('errorMessage');
  const errorText = document.getElementById('errorText');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const data = {
      email: formData.get('email'),
      fullName: formData.get('fullName'),
      message: formData.get('message') || ''
    };

    try {
      const response = await fetch('/api/request-access', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (response.ok) {
        form.style.display = 'none';
        successMessage?.classList.remove('hidden');
      } else {
        errorMessage?.classList.remove('hidden');
        if (errorText) errorText.textContent = result.error || 'Failed to submit request';
      }
    } catch (error) {
      errorMessage?.classList.remove('hidden');
      if (errorText) errorText.textContent = 'Network error. Please try again later.';
    }
  });
</script>
