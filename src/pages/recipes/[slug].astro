---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const recipes = await getCollection('recipes');
  return recipes.map(recipe => ({
    params: { slug: recipe.slug },
    props: { recipe },
  }));
}

const { recipe } = Astro.props;
const { data } = recipe;
const { Content } = await recipe.render();

// Calculate total time
const totalTime = data.prep_time + data.cook_time;

// Get difficulty color
const difficultyColors = {
  Easy: 'bg-green-100 text-green-800',
  Medium: 'bg-yellow-100 text-yellow-800',
  Hard: 'bg-red-100 text-red-800'
};
---

<Layout title={data.title} description={data.description}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Back to Recipes -->
    <div class="mb-6">
      <a href="/recipes" class="inline-flex items-center text-primary-600 hover:text-primary-700 transition-colors">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Recipes
      </a>
    </div>

    <article class="bg-white rounded-lg shadow-lg overflow-hidden">
      <!-- Recipe Header -->
      <div class="px-6 py-8 sm:px-8">
        <div class="text-center mb-8">
          <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">{data.title}</h1>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">{data.description}</p>
        </div>

        <!-- Recipe Meta Info -->
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mb-8">
          <div class="text-center p-4 bg-gray-50 rounded-lg">
            <div class="text-2xl font-bold text-primary-600">{data.prep_time}</div>
            <div class="text-sm text-gray-600">Prep Time (min)</div>
          </div>
          <div class="text-center p-4 bg-gray-50 rounded-lg">
            <div class="text-2xl font-bold text-primary-600">{data.cook_time}</div>
            <div class="text-sm text-gray-600">Cook Time (min)</div>
          </div>
          <div class="text-center p-4 bg-gray-50 rounded-lg">
            <div class="text-2xl font-bold text-primary-600">{totalTime}</div>
            <div class="text-sm text-gray-600">Total Time (min)</div>
          </div>
          <div class="text-center p-4 bg-gray-50 rounded-lg">
            <div class="text-2xl font-bold text-primary-600">{data.servings}</div>
            <div class="text-sm text-gray-600">Servings</div>
          </div>
        </div>

        <!-- Category and Difficulty -->
        <div class="flex flex-wrap items-center justify-center gap-3 mb-8">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
            {data.category}
          </span>
          <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${difficultyColors[data.difficulty]}`}>
            {data.difficulty}
          </span>
        </div>

        <!-- Tags -->
        {data.tags && data.tags.length > 0 && (
          <div class="flex flex-wrap justify-center gap-2 mb-8">
            {data.tags.map(tag => (
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>

      <!-- Featured Image -->
      {data.featured_image && (
        <div class="px-6 sm:px-8 mb-8">
          <img 
            src={data.featured_image} 
            alt={data.title}
            class="w-full h-64 sm:h-80 object-cover rounded-lg shadow-md"
          />
        </div>
      )}

      <div class="px-6 sm:px-8 pb-8">
        <div class="grid lg:grid-cols-2 gap-8">
          <!-- Ingredients -->
          <div>
            <h2 class="text-2xl font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-6 h-6 mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              Ingredients
            </h2>
            <ul class="space-y-2">
              {data.ingredients.map(ingredient => (
                <li class="flex items-start">
                  <span class="w-2 h-2 bg-primary-600 rounded-full mt-2 mr-3 flex-shrink-0"></span>
                  <span class="text-gray-700">
                    <strong class="text-gray-900">{ingredient.amount}</strong> {ingredient.item}
                  </span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Instructions -->
          <div>
            <h2 class="text-2xl font-semibold text-gray-900 mb-4 flex items-center">
              <svg class="w-6 h-6 mr-2 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Instructions
            </h2>
            <ol class="space-y-4">
              {data.instructions.map((instruction, index) => (
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-6 h-6 bg-primary-600 text-white text-sm font-medium rounded-full flex items-center justify-center mr-3 mt-0.5">
                    {index + 1}
                  </span>
                  <p class="text-gray-700 leading-relaxed">{instruction.step}</p>
                </li>
              ))}
            </ol>
          </div>
        </div>

        <!-- Recipe Notes -->
        <div class="mt-8 p-6 bg-yellow-50 border border-yellow-200 rounded-lg">
          <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
            <svg class="w-5 h-5 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
            Chef's Notes
          </h3>
          <div class="prose prose-sm text-gray-700">
            <Content />
          </div>
        </div>
      </div>
    </article>
  </div>
</Layout>